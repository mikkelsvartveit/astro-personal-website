---
import Navbar from "@components/Navbar.svelte";
import HeadContent from "@components/HeadContent.astro";
---

<html lang="en">
  <head>
    <slot name="head">
      <HeadContent />
    </slot>
  </head>

  <body class="overflow-y-scroll bg-gray-50">
    <Navbar
      client:load
      currentPath={Astro.url.pathname}
    />

    <main class="pb-6">
      <slot />
    </main>
  </body>
</html>

---
interface Props {
  href: string;
  [attribute: string]: string;
}

const { href, class: className, ...attributes } = Astro.props;
---

<a
  class={`text-emerald-700 duration-100 underline underline-offset-2 hover:text-emerald-500 ${
    className ?? ""
  }`}
  {href}
  {...attributes}
>
  <slot /></a
>
